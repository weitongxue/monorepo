{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom",
    ],
    "paths": {
      "@/core/*": [
        "core/*"
      ]
    }
  },
  "include": [
    "core/**/*.ts",
    "core/**/*.tsx",
    "core/**/*.vue",
  ],
  "exclude": [
    "node_modules"
  ]
}
