{
  "compilerOptions": {
    "composite": true,
    "target": "ES2018",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ]
  }
}
